@*Define model*@

@model IEnumerable<DVDCategory>

@{
	ViewData["Title"] = "DVD Categories";
}


@*Define ViewData*@

<div class="row">
	<div class="col-md-8 offset-md-2">

		<table class="table">
			<thead class="text-center">
			<tr>
				<th>@Html.DisplayNameFor(model => model.CategoryName)</th>
				<th>@Html.DisplayNameFor(model => model.CategoryDescription)</th>
				<th>@Html.DisplayNameFor(model => model.AgeRestricted)</th>
				<th>Actions</th>
			</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr class="text-center">
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.CategoryName)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.CategoryDescription)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.AgeRestricted)
						</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.CategoryNumber"><i class="lnr-bicycle bi-pencil-square"></i> Edit </a> |
							<a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.CategoryNumber"><i class="lnr-bicycle bi-eye"></i> Details </a> |
							<a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.CategoryNumber"><i class="lnr-bicycle bi-trash"></i> Delete </a> 
						</td>
					</tr>
				}
			</tbody>
			
		</table>

	</div>
</div>

@await Html.PartialAsync("_CreateItem", "DVDCategories") 

