@model DVDCategory

@{
    ViewData["Title"] = "Details of DVD Categories";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Details for @Model.CategoryName </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CategoryName" class="control-label"></label>
                        <input asp-for="CategoryName" class="form-control" readonly/>
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryDescription" class="control-label"></label>
                        <input asp-for="CategoryDescription" class="form-control" readonly/>
                        <span asp-validation-for="CategoryDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AgeRestricted" class="control-label"></label>
                        <input asp-for="AgeRestricted" class="form-control" readonly/>
                        <span asp-validation-for="AgeRestricted" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.CategoryNumber">Edit</a>
                        <a class="btn btn-outline-secondary" asp-action="Index"> Show All </a>
                    </div>
            </div>
        </div>
    </div>
</div>


