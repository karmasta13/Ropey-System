@*Define model*@

@model IEnumerable<Member>

@{
	ViewData["Title"] = "Members";
}


@*Define ViewData*@

<div class="row">
	<div class="col-md-8 offset-md-2">

		<table class="table">
			<thead class="text-center">
			<tr>
				<th>@Html.DisplayNameFor(model => model.MemberFirstName)</th>
				<th>@Html.DisplayNameFor(model => model.MemberLastName)</th>
				<th>@Html.DisplayNameFor(model => model.MemberAddress)</th>
				<th>@Html.DisplayNameFor(model => model.MemberDateOfBirth)</th>
				<th>@Html.DisplayNameFor(model => model.MembershipCategory.MembershipCategoryName)</th>
				<th>Actions</th>
			</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr class="text-center">
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.MemberFirstName)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.MemberLastName)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.MemberAddress)
						</td>
						<td class="align-middle">
							@item.MemberDateOfBirth.ToString("dd MMM yy")
						</td
						><td class="align-middle">
							@Html.DisplayFor(modelItem => item.MembershipCategory.MembershipCategoryName)
						</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary"><i class="lnr-bicycle bi-pencil-square"></i> Edit </a> |
							<a class="btn btn-outline-info"><i class="lnr-bicycle bi-eye"></i> Details </a> |
							<a class="btn btn-danger text-white"><i class="lnr-bicycle bi-trash"></i> Delete </a> 
						</td>
					</tr>
				}
			</tbody>
			
		</table>

	</div>
</div>
