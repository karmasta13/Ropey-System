@*Define model*@

@model IEnumerable<Loan>

@{
	ViewData["Title"] = "Loans";
}


@*Define ViewData*@

<div class="row">
	<div class="col-md-8 offset-md-2">

		<table class="table">
			<thead class="text-center">
			<tr>
				<th>@Html.DisplayNameFor(model => model.Member.MemberFirstName)</th>
				<th>@Html.DisplayNameFor(model => model.Member.MemberLastName)</th>
				<th>@Html.DisplayNameFor(model => model.LoanType.LoanTypeName)</th>
				<th>@Html.DisplayNameFor(model => model.CopyNumber)</th>
				<th>@Html.DisplayNameFor(model => model.DateOut)</th>
				<th>@Html.DisplayNameFor(model => model.DateDue)</th>
				<th>@Html.DisplayNameFor(model => model.DateReturn)</th>
				<th>Actions</th>
			</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr class="text-center">
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Member.MemberFirstName)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Member.MemberLastName)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.LoanType.LoanTypeName)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.CopyNumber)
						</td>
						<td class="align-middle">
							@item.DateOut.ToString("dd MMM yy")
						</td>
						<td class="align-middle">
							@item.DateDue.ToString("dd MMM yy")
						</td>
						<td class="align-middle">
							@item.DateReturn.ToString("dd MMM yy")
						</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary"><i class="lnr-bicycle bi-pencil-square"></i> Edit </a> |
							<a class="btn btn-outline-info"><i class="lnr-bicycle bi-eye"></i> Details </a> |
							<a class="btn btn-danger text-white"><i class="lnr-bicycle bi-trash"></i> Delete </a> 
						</td>
					</tr>
				}
			</tbody>
			
		</table>

	</div>
</div>
