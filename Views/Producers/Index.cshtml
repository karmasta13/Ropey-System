@*Define model*@

@model IEnumerable<Producer>

@{
	ViewData["Title"] = "Producers";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
            <div class="row">
              <div class="col-12">
                <div class="card mb-4">
                  <div class="card-header pb-0">
                    <h2 class="mt-3 text-center text-warning">Actor Details</h2>
                  </div>
                  <div class="row">
                    <div class="col-5 d-flex align-items-center">
                      <div class="input-group mx-4">
                        <span class="input-group-text text-body"><i class="fas fa-search" style="color: #D18A4A" aria-hidden="true"></i></span>
                        <input type="text" class="form-control" placeholder="Search">
                      </div>
                    </div>
                    <div class="col-7 text-end">
                        <a asp-action="Create" class="btn btn-warning btn-md px-4" style="margin-right: 50px;">
                          <i class="fas fa-plus" style="color: #fff" aria-hidden="true"></i>
                          Add
                        </a>
                      </div>
                    </div> 
                  <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                      <table class="table align-items-center mb-0">
                        <thead>
                          <tr>
                            <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7 px-8"> Producer Name</th>
                            <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">View</th>
                            <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7">Edit</th>
                            <th class="text-uppercase text-secondary text-xs font-weight-bolder opacity-7 ps-2">Delete</th>

                          </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
				        {
                          <tr>
                            <td>
                              <div class="d-flex px-2 py-1">
                                <div>
                                  <img src="@item.ProducerPictureURL" alt="@item.ProducerName" class="avatar avatar-64 me-3" alt="user1">
                                </div>
                                <div class="d-flex flex-column justify-content-center">
                                  <h6 class="mb-0 text-md mx-5">@Html.DisplayFor(modelItem => item.ProducerName)</h6>
                                </div>
                              </div>
                            </td>
                            <td>
                              <a class="btn btn-link text-dark px-4 mb-0" asp-action="Details" asp-route-id="@item.ProducerNumber"><i class="fas fa-eye text-dark me-2" aria-hidden="true"></i></a>
                            </td>
                            <td>
                              <a class="btn btn-link text-dark px-3 mb-0" asp-action="Edit" asp-route-id="@item.ProducerNumber"><i class="fas fa-pencil-alt text-dark me-2" aria-hidden="true"></i></a>
                            </td>
                            <td>
                              <a class="btn btn-link text-danger text-gradient px-3 mb-0" asp-action="Delete" asp-route-id="@item.ProducerNumber"><i class="far fa-trash-alt me-2"></i></a>
                            </td>
                          </tr>
                        }
                  </tbody>
                </table>
                </div>
                </div>
                </div>
                </div>
                </div>
          </div>


