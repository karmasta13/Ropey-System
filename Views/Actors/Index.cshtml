@*Define model*@

@model IEnumerable<Actor>

@{
	ViewData["Title"] = "Actors";
}


@*Define ViewData*@

<div class="row">
	<div class="col-md-8 offset-md-2">

		<table class="table">
			<thead class="text-center">
			<tr>
				<th>@Html.DisplayNameFor(model => model.ActorPictureURL)</th>
				<th>@Html.DisplayNameFor(model => model.ActorFirstName)</th>
				<th>@Html.DisplayNameFor(model => model.ActorSurname)</th>
				<th>Actions</th>
			</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td class="align-middle">
							<img class="rounded-circle" img src="@item.ActorPictureURL" alt="@item.ActorFirstName" style="max-width: 150px; height: 150px" />
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.ActorFirstName)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.ActorSurname)
						</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ActorNumber"><i class="lnr-bicycle bi-pencil-square"></i> Edit </a> |
							<a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.ActorNumber"><i class="lnr-bicycle bi-eye"></i> Details </a> |
							<a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.ActorNumber"><i class="lnr-bicycle bi-trash"></i> Delete </a> 
						</td>
					</tr>
				}
			</tbody>
			
		</table>

	</div>
</div>

<div style="position: fixed; right: 25px; bottom:75px;" class="text-white">
	<a asp-controller="Actors" asp-action="Create" class="btn btn-success"><i class="lnr-bicycle bi-plus-circle"></i> Add New </a>
</div>
